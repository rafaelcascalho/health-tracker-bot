# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram User ID (for authorization)
TELEGRAM_USER_ID=your_user_id_here

# Google Sheets ID (from the URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit)
GOOGLE_SHEETS_ID=your_sheet_id_here

# Google Service Account Credentials (JSON string or path to file)
# Option 1: Path to JSON file
GOOGLE_CREDENTIALS_FILE=credentials.json
# Option 2: JSON string (for Railway deployment)
# GOOGLE_CREDENTIALS={"type":"service_account",...}
